<!DOCTYPE html>
<html lang="en" class="bg-gray-100 text-gray-800">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Transaction Categories</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <%- include('partials/header') %>

        <div class="max-w-6xl mx-auto">
            <!-- Header -->
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-bold">Transaction Categories</h1>
                <div>
                    <button class="bg-indigo-600 text-white px-4 py-2 rounded text-sm hover:bg-indigo-700">Add
                        Category</button>
                </div>
            </div>

            <!-- Category Table -->
            <div class="overflow-x-auto bg-white shadow-md rounded-lg">
                <table class="min-w-full text-sm text-left">
                    <thead class="bg-gray-100 uppercase text-gray-700 text-xs border-b">
                        <tr>
                            <th class="px-6 py-4">ID</th>
                            <th class="px-6 py-4">Name</th>
                            <th class="px-6 py-4">Description</th>
                            <th class="px-6 py-4">Type</th>
                            <th class="px-6 py-4">Modify</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample Rows -->
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-4">1</td>
                            <td class="px-6 py-4">Salary</td>
                            <td class="px-6 py-4">Base monthly pay for employees</td>
                            <td class="px-6 py-4 text-green-600 font-medium">Income</td>
                            <td>
                                <form action="/category/1/delete"><button
                                        class="border px-4 py-2 rounded text-sm">Delete</button></form>
                            </td>
                        </tr>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-4">2</td>
                            <td class="px-6 py-4">Travel Reimbursement</td>
                            <td class="px-6 py-4">Refund for travel expenses</td>
                            <td class="px-6 py-4 text-blue-500 font-medium">Reimbursement</td>
                            <td>
                                <form action="/category/2/delete"><button
                                        class="border px-4 py-2 rounded text-sm">Delete</button></form>
                            </td>
                        </tr>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-4">3</td>
                            <td class="px-6 py-4">Insurance Deduction</td>
                            <td class="px-6 py-4">Health plan premium</td>
                            <td class="px-6 py-4 text-red-500 font-medium">Deduction</td>
                            <td>
                                <form action="/category/3/delete"><button
                                        class="border px-4 py-2 rounded text-sm">Delete</button></form>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
</body>

</html>