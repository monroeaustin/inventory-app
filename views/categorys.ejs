<!DOCTYPE html>
<html lang="en" class="bg-gray-100 text-gray-800">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Transaction Categories</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <%- include('partials/header') %>

        <div class="max-w-6xl mx-auto my-6">
            <!-- Header -->
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-bold">Transaction Categories</h1>
                <div>
                    <button class="bg-indigo-600 text-white px-4 py-2 rounded text-sm hover:bg-indigo-700"><a
                            href="/categorys/new">Add Category</a></button>
                    <button class="border px-4 py-2 rounded text-sm">Download</button>
                </div>
            </div>

            <!-- Category Table -->
            <div class="overflow-x-auto bg-white shadow-md rounded-lg">
                <table class="min-w-full text-sm text-left">
                    <thead class="bg-gray-100 uppercase text-gray-700 text-xs border-b">
                        <tr>
                            <th class="px-6 py-4">ID</th>
                            <th class="px-6 py-4">Name</th>
                            <th class="px-6 py-4">Description</th>
                            <th class="px-6 py-4">Type</th>
                            <th class="px-6 py-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(cat=> { %>
                            <tr class="border-b hover:bg-gray-50">
                                <td class="px-6 py-4">
                                    <%= cat.id %>
                                </td>
                                <td class="px-6 py-4">
                                    <%= cat.name %>
                                </td>
                                <td class="px-6 py-4">
                                    <%= cat.description %>
                                </td>
                                <td class="px-6 py-4 font-medium 
        <%= cat.type === 'Income' ? 'text-green-600' : 
            cat.type === 'Reimbursement' ? 'text-blue-500' : 
            cat.type === 'Deduction' ? 'text-red-500' : 
            'text-gray-600' %>">
                                    <%= cat.type %>
                                </td>
                                <td class="px-6 py-4">
                                    <form action="/categorys/<%= cat.id %>/delete" method="POST">
                                        <button class="border px-4 py-2 rounded text-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>

                </table>
            </div>
        </div>
</body>

</html>