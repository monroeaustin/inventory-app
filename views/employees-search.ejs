<!DOCTYPE html>
<html lang="en" class="bg-gray-100 text-gray-800">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employees</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>


<body>
    <%- include('partials/header') %>>
        <%- include('partials/employees-summary') %>
            <div class="max-w-6xl mx-auto">
                <!-- Header -->
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-2xl font-bold">Employees</h1>
                    <div class="flex gap-2">
                        <button class="bg-indigo-600 text-white px-4 py-2 rounded text-sm hover:bg-indigo-700"><a
                                href="/employees/new">Add Employee</a></button>

                        <button class="border px-4 py-2 rounded text-sm">Download</button>
                    </div>
                </div>

                <!-- Search & sortBy -->
                <form class="mb-6 flex flex-wrap gap-4">
                    <!-- Search Input -->
                    <div class="flex items-center">
                       <label for="search" class="mr-2 text-sm font-medium">Search</label>
                        <input type="text" id="search" name="search" placeholder="e.g. John, Active, 001"
                            class="border px-3 py-2 rounded text-sm" value="<%= search %>">
                    </div>

                    <!-- sortBy Dropdown -->
                    <div class="flex items-center">
                        <label for="sort" class="mr-2 text-sm font-medium">sortBy:</label>
                        <select id="sort" name="sortBy" class="border px-3 py-2 rounded text-sm">
                            <option value="top_performer" <%=sortBy==='top_performer' ? 'selected' : '' %>>Top
                                Performers</option>
                            <option value="id_asc" <%=sortBy==='id_asc' ? 'selected' : '' %>>ID (Lowest First)</option>
                            <option value="id_desc" <%=sortBy==='id_desc' ? 'selected' : '' %>>ID (Highest First)
                            </option>
                            <option value="first_name_asc" <%=sortBy==='first_name_asc' ? 'selected' : '' %>>Name (A–Z)
                            </option>
                            <option value="first_name_desc" <%=sortBy==='first_name_desc' ? 'selected' : '' %>>Name
                                (Z–A)</option>
                            <option value="age_asc" <%=sortBy==='age_asc' ? 'selected' : '' %>>Age (Youngest First)
                            </option>
                            <option value="age_desc" <%=sortBy==='age_desc' ? 'selected' : '' %>>Age (Oldest First)
                            </option>
                        </select>

                    </div>



                    <!-- Submit Button -->
                    <div>
                        <button type="submit"
                            class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-sm">Search /
                            Sort</button>
                    </div>
                </form>

                <!-- Employee Table -->
                <div class="overflow-x-auto bg-white shadow-md rounded-lg">
                    <table class="min-w-full text-sm text-left">
                        <thead class="bg-gray-100 uppercase text-gray-700 text-xs border-b">
                            <tr>
                                <th class="px-6 py-4">ID</th>
                                <th class="px-6 py-4">First Name</th>
                                <th class="px-6 py-4">Last Name</th>
                                <th class="px-6 py-4">Age</th>
                                <th class="px-6 py-4">Status</th>
                                <th class="px-6 py-4">Hire Date</th>
                                <th class="px-6 py-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% employees.forEach(emp=> { %>
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="px-6 py-4">
                                        <%= emp.id %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <%= emp.first_name %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <%= emp.last_name %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <%= emp.age %>
                                    </td>
                                    <td class="px-6 py-4 font-medium 
        <%= emp.status === 'Active' ? 'text-green-500' : 
            emp.status === 'Terminated' ? 'text-red-500' : 
            emp.status === 'Retired' ? 'text-yellow-500' : 
            'text-gray-500' %>">
                                        <%= emp.status %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <%= new Date(emp.hire_date).toLocaleDateString(undefined, {year: "numeric" ,
                                            month: "long" , day: "numeric" }) %>
                                    </td>
                                    <td>
                                        <form action="/employees/<%= emp.id %>/delete" method="POST">
                                            <button class="border px-4 py-2 rounded text-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>


                    </table>
                </div>
            </div>
</body>

</html>