<div class="bg-white p-4 rounded-lg shadow w-full max-w-3xl mx-auto mb-6">
  <h2 class="text-base font-semibold mb-3">Overall Employees</h2>
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-sm text-gray-700">
    
    <!-- Total Employees -->
    <div class="text-center">
      <h3 class="text-indigo-600 font-medium mb-1">Total</h3>
      <p class="text-xl font-semibold text-gray-900"><%= employeeDashboard.count %></p>
      <span class="text-gray-400 text-xs">Company-wide</span>
    </div>

    <!-- Active Employees -->
    <div class="text-center">
      <h3 class="text-green-600 font-medium mb-1">Active</h3>
      <p class="text-xl font-semibold text-gray-900"><%=employeeDashboard.active %></p>
      <span class="text-gray-400 text-xs">Currently working</span>
    </div>

    <!-- Top Employees -->
    <div class="text-center">
      <h3 class="text-purple-600 font-medium mb-1">Top</h3>
      <p class="text-xl font-semibold text-gray-900"><%=employeeDashboard.topPerformers %></p>
      <span class="text-gray-400 text-xs">Top performers</span>
    </div>

  </div>
</div>
