<!DOCTYPE html>
<html lang="en" class="bg-gray-100 text-gray-900">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-sans">
    <!-- Navbar -->
    <%- include('partials/header') %>


        <!-- Main Content -->
        <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 mt-10 space-y-10">
            <!-- Profile Card -->
            <section class="bg-white rounded-xl shadow-md p-6 flex items-center space-x-6">
                <div
                    class="w-20 h-20 bg-gray-300 rounded-full flex items-center justify-center text-xl font-bold text-white">
                    IMG
                </div>
                <div>
                    <h2 class="text-xl font-semibold">Username</h2>
                    <p class="text-gray-500">example@example.com</p>
                </div>
            </section>

            <!-- Welcome Message -->
            <section class="bg-indigo-50 border border-indigo-100 p-6 rounded-xl text-center">
                <h2 class="text-2xl font-semibold text-indigo-700 mb-2">Welcome!</h2>
                <p class="text-gray-600">Please navigate and look around the system using the menu above.</p>
            </section>
        </main>
                <div class=" bg-white shadow-md rounded-lg max-w-6xl mx-auto">
                    <table class="min-w-full text-sm text-left">
                        <thead class="bg-gray-100 uppercase text-gray-700 text-xs border-b">
                            <tr>
                                <th class="px-6 py-4">ID</th>
                                <th class="px-6 py-4">TimeStamp</th>
                                <th class="px-6 py-4">Description</th>
                              
                            </tr>
                        </thead>
                        <tbody>
                            <% system_logs.forEach(sytemLog=> { %>
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="px-6 py-4">
                                        <%= sytemLog.id %>
                                    </td>
                                    
                                    <td class="px-6 py-4">
                                        <%= sytemLog.log %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <%= sytemLog.description %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>


                    </table>
                </div>
        <!-- Footer -->
        <footer class="mt-20 text-center text-sm text-gray-400 py-6">
            &copy; 2025 Employee Manager. All rights reserved.
        </footer>
</body>

</html>